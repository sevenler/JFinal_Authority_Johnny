div(ng-controller='bugCtrl')
  .am-cf.am-padding
    .am-fl.am-cf
      strong.am-text-primary.am-text-lg Bug管理
      |  / 
      small Bug

  .am-g
    form.am-form.am-u-sm-12
      .am-scrollable-horizontal
        table.table.am-table.am-table-striped.am-table-hover.table-main.am-table-bordered.am-table-radius(ng-table="tableParams")
            tr(ng-repeat='r in $data')
              td( data-title="'id'" header-class="'text-left'" filter="{ 'id': 'text' }") {{r.id}}
              td( data-title="'标题'" header-class="'text-left'" ) {{r.name}}
              td( data-title="'类型'" header-class="'text-left'" ) {{r.type}}
              td( data-title="'状态'" header-class="'text-left'" ) {{r.status}}
              td( data-title="'修改日期'" header-class="'text-left'"  ) {{r.modifydate}}
              td( data-title="'创建日期'" header-class="'text-left'"  ) {{r.createdate}}
              td( data-title="'操作'" header-class="'text-left'")
                .am-btn-toolbar
                  .am-btn-group.am-btn-group-xs
                    button.am-btn.am-btn-default.am-btn-xs.am-text-secondary(ng-click="edit(r)" ng-if="hasPermission('/system/bug/edit')")
                      span.am-icon-pencil-square-o
                      |  编辑
                    button.am-btn.am-btn-default.am-btn-xs.am-text-danger(ng-click="delete(r.id)" ng-if="hasPermission('/system/bug/delete')")
                      span.am-icon-trash-o
                      |  删除
     
      input.am-form-field(ng-model='f.name' placeholder='输入标题')
      textarea( simditor editor='editor' placeholder='输入描述内容' ng-model="f.des")

    .am-u-sm-12.am-u-md-2.am-u-md-offset-8
      button.am-btn.am-btn-block.am-btn-warning(  type='button', ng-click='clean()'  )
        span  清空
    .am-u-sm-12.am-u-md-2
      button.am-btn.am-btn-block.am-btn-secondary(type='button', ng-click='save()' ng-if="hasPermission('/system/bug/save')")
        span  保存

          


    
       
        


       








